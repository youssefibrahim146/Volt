datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  userName  String
  password String
  budget Int
  totalVoltage Int
  minBudget Int

  userHomeDevices userHomeDevices[]

  userHomeDevice userHomeDevice[]
}
model admin{
  id    Int     @id @default(autoincrement())
  email String  @unique
  password String
}

model systemDevice{
  id    Int     @id
  name String
  img String
  VoltagesAvailable   Int[]
  deviceWorkAllDay   Boolean

  userHomeDevices userHomeDevices[]

  userHomeDevice userHomeDevice[]
}

model userHomeDevice{
  id    Int     @id
  userInputWorkTime Int
  userId  Int
  systemDeviceId Int

  user User @relation(fields: [userId], references: [id])
  systemDevice systemDevice @relation(fields: [systemDeviceId], references: [id])
}
model userHomeDevices {
  id    Int     @id
  userId  Int
  systemDeviceId Int

  user User @relation(fields: [userId], references: [id])
  systemDevice systemDevice @relation(fields: [systemDeviceId], references: [id])
}